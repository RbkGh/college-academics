CREATE TABLE absent (
    subject_id INTEGER AS Integer,
    absent_date TEXT AS 'java.util.Date',
    UNIQUE(subject_id, absent_date),
    FOREIGN KEY (subject_id) REFERENCES subject(id) ON DELETE CASCADE
);

select_by_id:
SELECT absent_date
FROM absent
WHERE subject_id = ? ;

select_absent_subjects:
SELECT subject_id
FROM absent
WHERE absent_date = ?;